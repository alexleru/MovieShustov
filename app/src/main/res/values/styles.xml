<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="main_text_bitter" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bitter</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="main_text_bitter.headline">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="main_text_bitter.title_medium">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="main_text_bitter.subheading">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="main_text_bitter.headline.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_text_roboto" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="main_text_roboto.body_medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="main_text_roboto.body_regular">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="main_text_roboto.caption_regular">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="main_text_bitter.minicaps">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="main_text_bitter.minicaps.white">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
